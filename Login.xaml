<Window x:Class="PasswordPal.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordPal"
        mc:Ignorable="d"
        Title="PasswordPal"
        Height="500"
        Width="400"
        Background="#26381d">
    <Border CornerRadius="30" Margin="25" Background="#dae3be">
        <StackPanel Margin="31,25,19,25" Background="#dae3be">
        <Label FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#0b0f09" Content="Login" />
            <Separator Margin="5"></Separator>
            <Label HorizontalAlignment="Center" FontSize="16" Foreground="#0b0f09" >Password</Label>
            <PasswordBox Name="Password" Margin="5" Width="150"></PasswordBox>
            <Button Click="Button_Click" Margin="5" Width="75">Submit</Button>
            <Label Width="250" HorizontalContentAlignment="Center" Foreground="#0b0f09">If you don't know the password you probably</Label>
            <Label Width="250" HorizontalContentAlignment="Center" Foreground="#0b0f09" Content="shouldn't be using this program..." Margin="21,0"/>
        </StackPanel>
    </Border>
    
</Window>
